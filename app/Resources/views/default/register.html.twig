{% extends 'base.html.twig' %}

{% block body %}

{% trans_default_domain 'FOSUserBundle' %}


    <div class="col-md-1"></div>
    <div class="col-md-3 wilders">
        <img class="" src="{{ asset('img/trek1.png') }}">
    </div>
    <div class="col-md-4 col-md-offset-1 register-div">
        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                <div class="alert alert-{{ label }}"> 
                    {{ flash }} 
                </div> 
            {% endfor %} 
        {% endfor %}
        <div class="formulaire">
            {{ form_start(form, {'method': 'post', 'action': path('user_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                <div class="col-md-12 ecart pad">
                    <h3 class="colog"> INSCRIPTION </h3>
                </div>
                <div class="col-md-12 ecart ">
                    <div class="col-md-6">
                        <p class="appel">Pseudo :</p>
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.username) }}
                        {{ form_errors(form.username) }}
                    </div>
                </div>
                <div class="col-md-12 ecart">
                    <div class="col-md-6">
                        <p class="appel">Nom :</p>
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.nom) }}
                        {{ form_errors(form.nom) }}
                    </div>
                </div>
                <div class="col-md-12 ecart">
                     <div class="col-md-6">
                        <p class="appel">Prenom :</p>
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.prenom) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                </div>
                <div class="col-md-12 ecart">
                    <div class="col-md-6">
                        <p class="appel">Age :</p>
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.age) }}
                        {{ form_errors(form.age) }}
                    </div>
                </div>
                <div class="col-md-12 ecart">
                    <div class="col-md-6">
                        <p class="appel">Sexe :</p>
                    </div>
                    <div class="col-md-6">
                        <select name="genre" id="genre">
                    {# {% if requete_infos.genre == "homme" %} #}
                        <option selected value="homme">Homme</option>
                        <option value="femme">Femme</option>
                    {# {% else %} #}
                        <option value="homme">Homme</option>
                        <option selected value="femme">Femme</option>
                    {# {% endif %} #}
                </select>
                    </div>
                </div>

        <div class="col-md-12 register-form ecart">
                <div class="col-md-6">
                    <p class="appel">Adresse E-mail :</p>
                </div>
                <div class="col-md-6">
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div class="col-md-12 register-form ecart">
                <div class="col-md-6">
                    <p class="appel">Mot de passe :</p>
                </div>
                <div class="col-md-6">
                    {{ form_widget(form.plainPassword.first) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>
            </div>

            <div class="col-md-12 register-form ecart">
                <div class="col-md-6">
                    <p class="appel">Confirmation :</p>
                </div>
                <div class="col-md-6">
                    {{ form_widget(form.plainPassword.second) }}
                    {{ form_errors(form.plainPassword.second) }}
                </div>
            </div>
            <div class="col-md-12 register-but">
                <div class="col-md-4"></div>
                <div class="col-md-4 ">
                    <input class="btn btn-success btnregi" type="submit" value="{{ 'registration.submit'|trans }}" />
                </div>
                <div class="col-md-4"></div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="col-md-3 wilders">
        <img class="" src="{{ asset('img/trek2.png') }}">
    </div>

{% endblock %}
